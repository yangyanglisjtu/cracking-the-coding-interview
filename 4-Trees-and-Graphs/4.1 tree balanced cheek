#include<iostream>
using namespace std;
street NODE{
    int val;
    NODE* left;
    NODE* right;
    NODE(){left=NULL;right=NULL;}
}
vector<int> v_height;
void preorder(int height,Node* node){
  if(node==NULL)
     return;
  if(node->left==NULL&&node->right==NULL){
      v_height.push_back(height);
  }
  preorder(height+1,node->left);
  preorder(height+1,node->right);
}
int main()
{
  NODE* tree=NULL;
  int max=INT_MIN;
  int min=INT_MAX;
  preorder(0,tree);
    for(auto a:v_height){
     if(a>max){
        max=a;
     }
     if(a<min){
        min=a;
     }
  }
  cout<<max-min<<endl;
}
